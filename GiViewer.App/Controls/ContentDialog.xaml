<UserControl x:Class="GiViewer.App.Controls.ContentDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GiViewer.App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="72"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                CornerRadius="16, 16, 0, 0"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0"
                           Name="TxtTitle"
                           Margin="24, 24, 24, 6"
                           FontFamily="Segoe UI"
                           FontWeight="SemiBold"
                           FontSize="20"/>

                <ContentPresenter Grid.Row="1"
                                  Name="Presenter"
                                  Margin="24, 6, 24, 24"/>
            </Grid>
        </Border>

        <Border
            Grid.Row="1"
            CornerRadius="0, 0, 16, 16"
            BorderThickness="0, 0.2, 0, 0"
            BorderBrush="{DynamicResource SurfaceStrokeColorDefaultBrush}"
            Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}">
            
            <Grid HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 从右往左排列 -->
                <Button Name="Button1" Grid.Column="2" Height="35" MinWidth="96" Margin="0, 8, 20, 8"/>
                <Button Name="Button2" Grid.Column="1" Height="35" MinWidth="96" Margin="0, 8, 20, 8"/>
                <Button Name="Button3" Grid.Column="0" Height="35" MinWidth="96" Margin="20, 8, 20, 8"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
