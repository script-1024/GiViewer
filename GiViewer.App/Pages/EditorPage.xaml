<Page x:Class="GiViewer.App.Pages.EditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:lang="clr-namespace:GiViewer.App.Resources.Languages"
      xmlns:app="clr-namespace:GiViewer.App"
      d:DataContext="{d:DesignInstance Type=app:LocalizationProvider}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditorPage">

    <StackPanel>
        <Menu Name="Menu">
            <MenuItem Header="{Binding Source={StaticResource lang}, Path=[Menu.File]}">
                <MenuItem Tag="File.New" Click="MenuItem_Click" Header="{Binding Source={StaticResource lang}, Path=[Menu.File.New]}"/>
                <MenuItem Tag="File.Open" Click="MenuItem_Click" Header="{Binding Source={StaticResource lang}, Path=[Menu.File.Open]}"/>
                <MenuItem Tag="File.Save" Click="MenuItem_Click" Header="{Binding Source={StaticResource lang}, Path=[Menu.File.Save]}"/>
                <MenuItem Tag="File.SaveAs" Click="MenuItem_Click" Header="{Binding Source={StaticResource lang}, Path=[Menu.File.SaveAs]}"/>
                <Separator/>
                <MenuItem Tag="File.Exit" Click="MenuItem_Click" Header="{Binding Source={StaticResource lang}, Path=[Menu.File.Exit]}"/>
            </MenuItem>
        </Menu>
        <TreeView Name="TreeView"/>
    </StackPanel>
</Page>
